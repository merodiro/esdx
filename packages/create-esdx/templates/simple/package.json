{
  "version": "0.1.0",
  "name": "esdx-starter-simple",
  "private": true,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepare": "esdx build && husky install",
    "start": "esdx --watch",
    "build": "esdx build",
    "test": "jest",
    "lint": "echo 'TODO lint'",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.5",
    "esdx": "^0.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "size-limit": "^5.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.cjs.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "preset": "esdx"
  },
  "esdx": {
    "entries": [
      {
        "source": "src/index.ts",
        "format": "esm",
        "output": "dist/index.esm.js",
        "types": "dist/index.d.ts"
      },
      {
        "source": "src/index.ts",
        "format": "cjs",
        "output": "dist/index.cjs.js"
      }
    ]
  }
}
