{
  "version": "0.1.0",
  "name": "esdx-starter-react",
  "private": true,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "esdx --watch",
    "build": "esdx build",
    "test": "jest",
    "lint": "echo 'TODO lint'",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "esdx": "^0.1.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.4",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.cjs.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "preset": "esdx"
  },
  "esdx": {
    "entries": [
      {
        "source": "src/index.tsx",
        "format": "esm",
        "output": "dist/index.esm.js",
        "types": "dist/index.d.ts"
      },
      {
        "source": "src/index.tsx",
        "format": "cjs",
        "output": "dist/index.cjs.js"
      }
    ]
  }
}
