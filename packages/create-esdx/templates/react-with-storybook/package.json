{
  "version": "0.1.0",
  "name": "esdx-starter-react-with-storybook",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.tsx",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepare": "esdx build && husky install",
    "start": "esdx --watch",
    "build": "esdx build",
    "test": "jest",
    "lint": "echo 'TODO lint'",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@size-limit/preset-small-lib": "^4.12.0",
    "@storybook/addon-actions": "^6.3.0-rc.8",
    "@storybook/addon-essentials": "^6.3.0-rc.8",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-links": "^6.3.0-rc.8",
    "@storybook/addons": "^6.3.0-rc.7",
    "@storybook/react": "^6.3.0-rc.8",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-loader": "^8.2.2",
    "esdx": "^0.0.2",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^4.12.0",
    "storybook-builder-vite": "^0.0.9",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "vite": "^2.3.8"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "preset": "esdx"
  },
  "dependencies": {
    "prettier": "^2.3.1"
  }
}
