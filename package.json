{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "prepare": "manypkg check && husky install",
    "start": "turbo run start --parallel --no-cache",
    "build": "turbo run build",
    "test": "turbo run test",
    "publish-local": "ultra -r yalc publish",
    "templates": "ultra -r --filter 'esdx-starter-*'",
    "lint": "yarn eslint .",
    "format": "prettier \"**/*\" --write --ignore-unknown"
  },
  "dependencies": {
    "@changesets/cli": "^2.19.0",
    "@manypkg/cli": "^0.19.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "turbo": "^1.0.19",
    "typescript": "^4.5.4",
    "ultra-runner": "^3.10.5",
    "yalc": "^1.0.0-pre.53"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "resolutions": {
    "@types/react": "^17.0.20"
  },
  "turbo": {
    "pipeline": {
      "start": {
        "outputs": [],
        "dependsOn": [
          "^start"
        ]
      },
      "build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "example-react#build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build",
          "esdx-starter-react#build"
        ]
      },
      "example-storybook#build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build",
          "esdx-starter-react-with-storybook#build"
        ]
      },
      "test": {
        "outputs": [],
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "packageManager": "yarn@3.1.1"
}
